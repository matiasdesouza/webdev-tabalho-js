div.col-sm-9.col-sm-offset-3
  h3 <b>Dados da cervejaria</b>
form.form-horizontal.form(id="form-brewerie-visualizacao")
  div.form-group
    label.control-label.col-sm-1 Nome
    div.col-sm-10.col-lg-6
      input.form-control(type='text', readonly='true', data-ng-model='brewerie.name')
  div.form-group
    label.control-label.col-sm-1 Cidade
    div.col-sm-10.col-lg-6
      input.form-control(type='text', readonly='true', data-ng-model='brewerie.city')
  div.form-group
    label.control-label.col-sm-1 Estado
    div.col-sm-10.col-lg-6
      input.form-control(type='text', readonly='true', data-ng-model='brewerie.state')
  div.form-group
    label.control-label.col-sm-1 Pa√≠s
    div.col-sm-10.col-lg-6
      input.form-control(type='text', readonly='true', data-ng-model='brewerie.country')
  div.form-group
    label.control-label.col-sm-1 Cervejas
    div.col-sm-10.col-lg-6
      input.form-control(type='text', readonly='true', data-ng-model='brewerie.beers')
  div.col-sm2.col-sm-offset-1
    a(href='/breweries/{{ brewerie._id }}/edit') <b>EDITAR</b>