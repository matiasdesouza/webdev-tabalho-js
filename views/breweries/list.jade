div.col-sm-9.col-sm-offset-3
  h3 <b>Listagem de cervejarias</b>
  
table.table.table-responsive.table-striped
  thead
    tr
      th Nome    
      th Cidade
      th Estado
      th 
  tbody
    tr(data-ng-repeat='brewerie in breweries')
      td 
        a(href='/breweries/{{ brewerie._id }}')
          | {{ brewerie.name }}
      td
        {{ brewerie.city }}
      td
        {{ brewerie.state }}
      td
        button.btn.btn-danger(data-ng-click='deletar(brewerie)') DELETAR